
<div class='container'>
  <div class='row'>
    <div class="col-12">
      <h4 class="my-5">管理者ログイン</h4>
        <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
        <%= render "admin/shared/error_messages", resource: resource %>
        <div class="field form-group row mt-5">
          <%= f.label :メールアドレス, class: "col-3 offset-2" %>
          <%= f.text_field :email, class: "form-control col-5"%>
        </div>
        <div class="field form-group row">
          <%= f.label :パスワード, class: "col-3 offset-2" %>
          <%= f.password_field :password, class: "form-control col-5" %>
        </div>
        <div class="mt-5">
          <%= f.submit "ログイン" ,class: 'btn btn_primary col-2 offset-5 '%>
        </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
