<div class="container">
  <div class="row">
    <div class="col-12">
      <h4 class="my-5">注文履歴一覧</h4>
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>

        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime("%Y-%m-%d %H:%M"), master_order_path(order) %></td>
            <td>
              <%= order.member.last_name %>
              <%= order.member.first_name %>
            </td>
            <td><%= order.order_items.sum(:count) %></td>
            <td><%= order.order_status_i18n %></td>
          </tr>
        <% end %>
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        </tbody>
      </table>
      <div class="pagination"><%= paginate @orders %></div>
      </div>
    </div>
  </div>
</div>