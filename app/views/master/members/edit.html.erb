<div class="container">
  <div class="row">
    <div class="col-12">
      <% if @member.errors.any? %>
      <div class="notification is-danger">
        <h4><%= pluralize(@member.errors.count, "error") %>件のエラーが発生しました</h4>
        <ul>
          <% @member.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
      </div>
　　  <% end %>
      <h4 class="my-5">
        <%= @member.last_name %><%= @member.first_name %>さんの会員情報編集
      </h4>
      <%= form_with model: @member, url: master_member_path(@member.id), local: true do |f| %>
        <div class="row">
          <p class="col-3 mb-4">会員ID</p>
          <div class="mb-4"><%= @member.id %></div>
        </div>
        <div class="field form-group row">
          <%= f.label :"氏名", class: "col-3 control-label" %>
          <%= f.text_field :last_name, class: "col-4 form-control mr-2"%>
          <%= f.text_field :first_name, class: "col-4 form-control"%>
        </div>
          <div class="field form-group row">
          <%= f.label :"フリガナ", class: "col-3 control-label" %>
          <%= f.text_field :last_name_kana, class: "col-4 form-control mr-2"%>
          <%= f.text_field :first_name_kana, class: "col-4 form-control"%>
        </div>
        <div class="field form-group row">
          <%= f.label :"郵便番号", class: 'col-3 control-label' %>
          <%= f.number_field :post_code, class: 'col-4 form-control', placeholder:"0000000" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"住所", class: "col-3 control-label" %>
          <%= f.text_field :address, autofocus: true, class: "col-7 form-control", placeholder:"東京都渋谷区代々木神園町０－０" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"電話番号", class: "col-3 control-label" %>
          <%= f.number_field :phone_number, class: "col-4 form-control", placeholder:"00000000000" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"メールアドレス", class: "col-3 control-label" %>
          <%= f.email_field :email, autofocus: true, class: "col-4 form-control",  placeholder:"sample@example.com" %>
        </div>
        <div class="field form-group row">
          <%= f.label :"会員ステータス", class: "col-3 control-label" %>
          <%= f.radio_button :member_status, true, class: "mr-1 mt-2" %>
          <%= f.label :member_status, "有効", class: "mr-2" %>
          <%= f.radio_button :member_status, false, class: "mr-1 mt-2"%>
          <%= f.label :member_status, "退会", class: "mr-2" %>
        </div>
        <div class="field row">
          <%= f.submit "変更を保存", class: "btn btn_success offset-3 mt-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>